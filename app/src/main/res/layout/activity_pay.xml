                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base5dp"
                android:text="四.咨询客服电话："/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base20dp"
                android:layout_marginTop="@dimen/base5dp"
                android:text="010-67331288"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base20dp"
                android:layout_marginTop="@dimen/base5dp"
                android:text="13910511586"/>

            <ImageView
                android:id="@+id/pay_alipay"
                android:layout_width="@dimen/base100dp"
                android:layout_height="@dimen/base100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/base50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_alipay"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/base5dp"
                android:text="长按支付宝二维码保存"
                android:textColor="#999999"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base10dp"
                android:text="支付宝支付提示（请先仔细阅读后再向我付款）："
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
