                android:layout_marginTop="@dimen/base5dp"
                android:text="开  户  行：北京市朝阳区九龙山山水文园支行"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base5dp"
                android:text="四.咨询客服电话："/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base20dp"
                android:layout_marginTop="@dimen/base5dp"
                android:text="010-67331288"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base20dp"
                android:layout_marginTop="@dimen/base5dp"
                android:text="13910511586"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/base10dp"
                android:gravity="center_horizontal"
                android:text="注:二维码保存在文件管理-mashaqi/pay/文件夹中(相册的pay文件中)"
                android:textColor="#999999"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
