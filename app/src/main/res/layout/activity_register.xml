<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">


    <include
        layout="@layout/custom_action_bar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base1dp"
        android:background="@color/brown_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base45dp"
        android:layout_marginLeft="@dimen/base25dp"
        android:layout_marginRight="@dimen/base25dp"
        android:layout_marginTop="@dimen/base35dp"
        android:background="@drawable/login_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base15dp"
            android:src="@drawable/icon_phone"/>

        <View
            android:layout_width="@dimen/base1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/base10dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginTop="@dimen/base10dp"
            android:background="@color/brown"/>

        <EditText
            android:id="@+id/et_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base15dp"
            android:inputType="number"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入您本人手机号"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base45dp"
        android:layout_marginLeft="@dimen/base25dp"
        android:layout_marginRight="@dimen/base25dp"
        android:layout_marginTop="@dimen/base25dp"
        android:background="@drawable/login_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base15dp"
            android:src="@drawable/icon_pswd"/>

        <View
            android:layout_width="@dimen/base1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/base10dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginTop="@dimen/base10dp"
            android:background="@color/brown"/>

        <EditText
            android:id="@+id/et_passWord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberPassword"
            android:layout_marginLeft="@dimen/base15dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入登录密码"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base45dp"
        android:layout_marginLeft="@dimen/base25dp"
        android:layout_marginRight="@dimen/base25dp"
        android:layout_marginTop="@dimen/base25dp"
        android:background="@drawable/login_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base15dp"
            android:src="@drawable/icon_pswd"/>

        <View
            android:layout_width="@dimen/base1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/base10dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:layout_marginTop="@dimen/base10dp"
            android:background="@color/brown"/>

        <EditText
            android:id="@+id/et_again_passWord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberPassword"
            android:layout_marginLeft="@dimen/base15dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请再次确认登录密码"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base45dp"
        android:layout_marginLeft="@dimen/base25dp"
        android:layout_marginRight="@dimen/base25dp"
        android:layout_marginTop="@dimen/base35dp"
        android:background="@drawable/login_bg_1"
        android:gravity="center"
        android:text="注 册"
        android:textColor="@color/white"
        android:textSize="@dimen/base20sp"/>

    <TextView
        android:id="@+id/tv_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/base15dp"
        android:gravity="center"
        android:text="注册即表示同意《玛沙琪用户协议》"
        android:textColor="#999999"
        android:textSize="@dimen/base15sp"/>
</LinearLayout>
