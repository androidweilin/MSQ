<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/base10dp"
              android:paddingTop="@dimen/base10dp">

    <CheckBox
        android:id="@+id/item_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/base15dp"
        android:button="@drawable/checkbox_selector"
        android:checked="false"/>

    <ImageView
        android:id="@+id/iv_order"
        android:layout_width="@dimen/base100dp"
        android:layout_height="@dimen/base100dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/base10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/banner"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/base10dp"
        android:layout_marginRight="@dimen/base10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_orderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称商品名称商品名称商品名称商品名称商品名称"/>

        <View
            android:layout_width="@dimen/base1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_orderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="￥88"
            android:textColor="#e30006"/>

        <View
            android:layout_width="@dimen/base1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_orderSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/car_sub"/>

            <TextView
                android:id="@+id/tv_orderTotal"
                android:layout_width="@dimen/base75dp"
                android:layout_height="match_parent"
                android:background="#eeeeee"
                android:gravity="center"
                android:text="2"
                android:textColor="#404040"
                android:textSize="@dimen/base15sp"/>

            <ImageView
                android:id="@+id/iv_orderAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/car_add"/>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/base1dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_orderDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/base30dp"
                android:src="@drawable/car_delete"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>