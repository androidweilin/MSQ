<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base200dp"
        android:background="@drawable/banner"
        android:orientation="vertical">

        <com.wkbp.msq.customView.CircleImageView
            android:id="@+id/userHead"
            android:layout_width="@dimen/base80dp"
            android:layout_height="@dimen/base80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base50dp"
            android:background="@drawable/default_head" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/base20dp"
            android:text="姓名"
            android:textColor="@color/brown"
            android:textSize="@dimen/base18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base150dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_myCollect"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/my_collect" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base5dp"
                        android:text="收藏商品"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/base12sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_marginLeft="@dimen/base30dp"
                android:background="@color/brown" />

            <RelativeLayout
                android:id="@+id/rl_myOrder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/my_order" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base5dp"
                        android:text="我的订单"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/base12sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="@dimen/base1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/base15dp"
            android:layout_marginTop="@dimen/base15dp"
            android:background="@color/brown" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_myShopcar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/my_shopcar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base5dp"
                        android:text="购物车"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/base12sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base1dp"
                android:layout_marginRight="@dimen/base30dp"
                android:background="@color/brown" />

            <RelativeLayout
                android:id="@+id/rl_mySetting"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/my_setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base5dp"
                        android:text="基本设置"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/base12sp" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_myFeedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base50dp"
        android:layout_marginTop="@dimen/base5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/base30dp"
        android:paddingRight="@dimen/base20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_feedback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:text="在线反馈"
            android:textColor="@color/brown" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/base1dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/base30dp"
        android:paddingRight="@dimen/base20dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base1dp"
            android:background="@color/brown_light" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_myService"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/base30dp"
        android:paddingRight="@dimen/base20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_service" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:text="客服"
            android:textColor="@color/brown" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/base1dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/base30dp"
        android:paddingRight="@dimen/base20dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base1dp"
            android:background="@color/brown_light" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_myAbout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/base30dp"
        android:paddingRight="@dimen/base20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_about" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:text="关于我们"
            android:textColor="@color/brown" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/base1dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_right" />
    </LinearLayout>
</LinearLayout>