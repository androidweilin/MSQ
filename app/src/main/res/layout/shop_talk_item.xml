<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp" >

    <com.wkbp.msq.customView.CircleImageView
        android:id="@+id/talk_head"
        android:layout_width="@dimen/base50dp"
        android:layout_height="@dimen/base50dp"
        android:layout_marginTop="@dimen/base10dp"
        android:layout_marginBottom="@dimen/base10dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/talk_head"
        android:orientation="vertical"
        android:padding="@dimen/base10dp" >

        <TextView
            android:id="@+id/talk_nickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/base14sp" />

        <TextView
            android:id="@+id/talk_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/base18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/talk_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/base14sp" />
    </LinearLayout>

</RelativeLayout>