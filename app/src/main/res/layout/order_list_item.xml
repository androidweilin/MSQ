<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/base10dp"
        android:paddingTop="@dimen/base10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="订单号:"
            android:textSize="@dimen/base16sp"/>

        <TextView
            android:id="@+id/tv_orderNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456789"
            android:textSize="@dimen/base16sp"/>

        <TextView
            android:id="@+id/tv_orderStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/base30dp"
            android:gravity="right"
            android:text="交易成功"
            android:textColor="@color/red"
            android:textSize="@dimen/base16sp"/>
    </LinearLayout>

    <com.wkbp.msq.customView.ListViewForScrollView
        android:id="@+id/lv_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base1dp"/>


    <TextView
        android:id="@+id/tv_order_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base1dp"
        android:background="@color/white"
        android:paddingBottom="@dimen/base10dp"
        android:paddingLeft="@dimen/base15dp"
        android:paddingTop="@dimen/base10dp"
        android:text="合计：50.00元"
        android:textColor="#222222"
        android:textSize="@dimen/base16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base15dp"
        android:layout_marginTop="@dimen/base1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/base20dp"
        android:paddingBottom="@dimen/base5dp"
        android:paddingTop="@dimen/base5dp">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/base1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/brown_light"
            android:paddingBottom="@dimen/base10dp"
            android:paddingLeft="@dimen/base15dp"
            android:paddingRight="@dimen/base15dp"
            android:paddingTop="@dimen/base10dp"
            android:text="删除订单"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/btn_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base20dp"
            android:background="@color/brown"
            android:paddingBottom="@dimen/base10dp"
            android:paddingLeft="@dimen/base15dp"
            android:paddingRight="@dimen/base15dp"
            android:paddingTop="@dimen/base10dp"
            android:text="订单状态"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>