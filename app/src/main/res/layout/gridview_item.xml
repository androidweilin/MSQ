<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_grid_item"
        android:layout_width="@dimen/base170dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/gridview_bg"
        android:orientation="vertical"
        android:padding="@dimen/base10dp">

        <ImageView
            android:id="@+id/iv_grid_item"
            android:layout_width="@dimen/base150dp"
            android:layout_height="@dimen/base150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/banner"/>

        <TextView
            android:id="@+id/tv_grid_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base5dp"
            android:singleLine="true"
            android:text="标题标题标题标题标题标题"
            android:textColor="@color/brown"/>

        <TextView
            android:id="@+id/tv_grid_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/base5dp"
            android:textSize="@dimen/base18sp"
            android:singleLine="true"
            android:text="￥ 168"
            android:textColor="@color/red"/>

    </LinearLayout>

</RelativeLayout>